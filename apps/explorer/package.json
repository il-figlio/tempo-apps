{
  "name": "explorer",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "pnpm check:biome && pnpm check:types",
    "check:biome": "biome check --write --unsafe",
    "check:types": "tsgo --project tsconfig.json --noEmit",
    "check:types:test": "tsc --project tsconfig.test.json --noEmit",
    "deploy": "pnpm build && wrangler deploy",
    "dev": "VITE_ENABLE_DEMO=true vite dev --port 3000",
    "gen:tokens-index": "node --experimental-strip-types --env-file=.env scripts/generate-tokens-index.ts",

    "gen:types": "if [ -n \"$CI\" ]; then echo 'skipping wrangler types on vercel'; exit 0; else test -f .env || cp .env.example .env; wrangler types; fi",

    "postinstall": "if [ -n \"$CI\" ]; then echo 'skipping wrangler postinstall on vercel'; pnpm build; else pnpm gen:types && pnpm build; fi",

    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "…": "catalog:"
  },
  "devDependencies": {
    "…": "catalog:"
  }
}
